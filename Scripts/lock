#!/usr/bin/env bash

send_message() {
    echo $@ | dzen2 -p 1 -h 30 -y 1060 -fg '#FFFFFF' -bg '#000000'
}

main() {
    local lock="lockscreen"
    local power_off="poweroff"
    local sleeping="suspend"
    local reboot="reboot"
    options="$lock\n$sleeping\n$power_off\n$reboot"
    action=$(echo -e $options | dmenu)

    case $action in
        $power_off)
	    sudo -A poweroff
            ;;
        $sleeping)
	    sudo -A suspend
            ;;
        $lock)
	    slock
            ;;
        $reboot)
	    sudo -A reboot
            ;;
        *)
    esac
}

main
